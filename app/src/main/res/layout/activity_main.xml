<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shirish.shirishdemo.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/text_demo_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:textStyle="bold"
                android:padding="@dimen/activity_horizontal_margin"
                android:onClick="openCamera"
                android:text="@string/demo_1"/>
            <TextView
                android:id="@+id/text_demo_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:textStyle="bold"
                android:padding="@dimen/activity_horizontal_margin"
                android:onClick="openRetorfit"
                android:text="@string/demo_2"/>
            <TextView
                android:id="@+id/text_demo_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:textStyle="bold"
                android:padding="@dimen/activity_horizontal_margin"
                android:onClick="uploadImageToServer"
                android:text="@string/demo_3"/>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
